@model EPA.Models.SignIn
@{
    ViewBag.Title = "Sign In";
    Layout = "_LoginLayout";
}

<style>

    #signInBtnDiv{
        width: 100px;
        margin: 0 auto;
        margin-top: 8%;
    }

    #signInBtn{
        width: 80px;
        margin: 0 auto;
    }

    h4{
        text-decoration: underline;
        margin-bottom: 8%;
    }

    a {
        text-align: center;
    }

</style>

<div>
    @using (Html.BeginForm("SignIn", "Home", FormMethod.Post))
    {

        @*<iframe src="https://admissions.statuscheck.vetmed.lsu.edu/" title="form1" id="form1"></iframe>*@

        <div id="signInFormDiv">

            @*<h4>Sign In</h4>*@

            <div>
                <label for="UserName">Username</label>
                @Html.TextBoxFor(u => u.Username, new { @class = "form-control form-control-sm", @placeholder = "PAWS ID", autocomplete = "off" })
            </div>
            <div style="margin-top: 3%;">
                <label for="Password">Password</label>
                @Html.PasswordFor(u => u.Password, new { @class = "form-control form-control-sm", @placeholder = "Password", autocomplete = "off" })
            </div>

            <div id="signInBtnDiv">
                <button type="submit" class="k-button k-primary" id="signInBtn">Login</button>
            </div>

            <br /><br />
            <a href="@Url.Action("FirstTimeLogin","Home")">
                <h3 id="LinkToItems"><span><i class="fas fa-sign-out-alt fa-1x pr-2"></i>Unable to login? Click here.</span></h3>
            </a>

        </div>

        if (TempData["ValidationMsg"] != null)
        {
            <div id="signInValid">
                <div class="alert alert-danger text-center" role="alert">
                    @TempData["ValidationMsg"]
                </div>
            </div>
        }

    }

</div>